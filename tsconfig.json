{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "esnext",
        "outDir": "dist",
        "module": "commonjs",
        "removeComments": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "lambda/**/*"
    ],
    "exclude": [
        "node_modules",
        "coverage"
    ]
}